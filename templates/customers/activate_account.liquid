{% layout settings.customer_layout %}

<div id="crumbs" class="sixteen columns">
    <a href="/" title="Home">Home</a>
    &raquo;
    <a href="">Activate Account</a>
</div><!-- #crumbs -->

<div class="sixteen columns formfields">
    <h1>Activate Account</h1>
    
    <p>Create your password to activate your account</p>

    {% form 'activate_customer_password' %}
    <div class="error">
        {{ form.errors | default_errors }}
    </div>
    <div id="password" class="clearfix form-row inputrow">
      <label class="large hoverlabel" for="customer_password">Password</label>
      <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
    </div>
    <div id="password_confirm" class="clearfix form-row inputrow">
      <label class="large hoverlabel" for="customer_password_confirmation">Password Confirmation</label>
      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
    </div>
    
    <div class="action_bottom">
      <input class="btn button" type="submit" value="Activate Account" />
      <span class="note">or</span>
      <input type="submit" class="btn cancel button alt" name="decline" id="customer_decline" value="Decline Invitation" />
    </div>
    {% endform %}

</div>
