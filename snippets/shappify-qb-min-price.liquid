{% assign shappify_min = shappify-min-price.price_max %}
{% for variant in shappify-min-price.variants %}
    {% if variant.metafields.shappify_qb.qb_hide == "1" %}{% else %}
        {% if variant.price < shappify_min %}
            {% assign shappify_min = variant.price %}
        {% endif %}
    {% endif %}
{% endfor %}
{{ shappify_min | money }}