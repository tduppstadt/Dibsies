  {% endif %}
  {% if forloop.last %}
      {% assign lastclass = ' last' %}
  {% else %}
      {% assign lastclass = '' %}
  {% endif %}

  {% if row_limit == 2 %}
      <div class="product eight columns{{ lastclass }}">
