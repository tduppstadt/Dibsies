                  {% if row_limit == 2 %}
                  {% cycle '', '<div class="cf"></div>' %}
                  {% elsif row_limit == 3 %}
                  {% cycle '', '', '<div class="cf"></div>' %}
                  {% elsif row_limit == 5 %}
                  {% cycle '', '', '', '', '<div class="cf"></div>' %}
                  {% else %}
                  {% cycle '', '', '', '<div class="cf"></div>' %}
                  {% endif %}
                  {% endif %}    
                  
    
    
			{% endfor %}    
    
      	{% endif %}
    
      
      {% endfor %}
                  
      {% endif %}
      
    
    
  </div><!-- .productlist -->
                
{% if collection.description != '' %}

          <div class="content-block row" style="clear:both;">
              <div class="expandable">{{ collection.description }}</div>
          </div><!-- .pagecontent -->

